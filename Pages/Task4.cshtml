@page
@model TailwindTasks.Pages.Task4Model
@{
    ViewData["Title"] = "Task 4 - Animations";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="text-center">
        <div class="mb-8">
            <h1 class="text-4xl font-bold text-gray-800 hover:scale-110 hover:rotate-5 transition duration-300 cursor-pointer">
                Hover me!
            </h1>
            <p class="text-gray-600 mt-2">This text scales and rotates on hover</p>
        </div>
        
        <button class="bg-purple-500 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition duration-300 animate-pulse">
            Pulsing Button
        </button>
    </div>
</div>
