@page
@model TailwindTasks.Pages.Task3Model
@{
    ViewData["Title"] = "Task 3 - Login Form";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <h2 class="text-2xl font-bold text-center mb-6">Login</h2>
        <form method="post">
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
                    Email
                </label>
                <input 
                    type="email" 
                    id="email"
                    name="Email"
                    class="w-full py-2 px-4 border-2 border-gray-300 rounded focus:ring-2 focus:ring-blue-500"
                    placeholder="Enter your email"
                >
            </div>
            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                    Password
                </label>
                <input 
                    type="password" 
                    id="password"
                    name="Password"
                    class="w-full py-2 px-4 border-2 border-gray-300 rounded focus:ring-2 focus:ring-blue-500"
                    placeholder="Enter your password"
                >
            </div>
            <button 
                type="submit"
                class="w-full bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700 transition duration-300"
            >
                Login
            </button>
        </form>
    </div>
</div>
